{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Test",
            "file": "${workspaceFolder}/test/web/test.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Test MIN",
            "file": "${workspaceFolder}/test/web/testMin.html"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Make DOC",
            "program": "${workspaceFolder}/node_modules/jsdoc/jsdoc.js",
            "args": [
                "-c",
                "./jsdoc.conf.json",
                "-r",
                "-d",
                "./doc"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ESLint",
            "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
            "args": [
                "./src",
                "./test"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Make LIB",
            "program": "${workspaceFolder}/makeLib.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test node.js",
            "program": "${workspaceFolder}/nodeApp.js"
        }
    ]
}